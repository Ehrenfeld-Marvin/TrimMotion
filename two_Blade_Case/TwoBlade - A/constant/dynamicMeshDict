FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      dynamicMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dynamicFvMesh   dynamicMotionSolverFvMesh;
motionSolverLibs ("libdynamicMesh.so");
solver		multiSolidBodyMotionSolver;

rotorZone-cells // name des zone von diesen zellen die bewegen soll sind
{
	solidBodyMotionFunction  rotatingNoF1IntegrationMotion;
	rotatingNoF1IntegrationMotionCoeffs
	{
		origin        (0 0 0);
		axis          (0 0 1);
		omega
		{
			type            scale;
			scale           linearRamp;
			scaleCoeffs
			{
					start           12e-4;
					duration        96e-4;
			}
			value 18.67;
		}
	}
}


AMIR-cells // name des zone von diesen zellen die bewegen soll sind
{
	solidBodyMotionFunction multiMotion;
	rotatingMotion
	{
		solidBodyMotionFunction  rotatingNoF1IntegrationMotion;
		rotatingNoF1IntegrationMotionCoeffs
		{
			origin        (0 0 0);
			axis          (0 0 1);
			omega
			{

				type            scale;
				scale           linearRamp;
				scaleCoeffs
					{
						start           12e-4;
						duration        96e-4;
					}
				value 18.67;
			}
		}
	}
	
	pitchingMotion  /// this instruction MUST come after rotor motion, otherwise the center of rotation is wrong
	{
		solidBodyMotionFunction  TrimMotion;
		origin        (0.25 0.000 0);
		amplitude     (0 0 -25);  // degs
		initialOffset 0; // offset of foil oscillation at t=0, multiple of pi, in rad
		omega
		{
			type            scale;
			scale           linearRamp;
			scaleCoeffs
				{
					start           12e-4;
					duration        96e-4;
				}
			value 18.67;
		}
		omega_value	18.67;
		#include 	"../system/Oscillations"
		PatchName	"_Blade1";
	}
	

}


AMIL-cells // name des zone von diesen zellen die bewegen soll sind
{
solidBodyMotionFunction multiMotion;
	rotatingMotion
	{
		solidBodyMotionFunction  rotatingNoF1IntegrationMotion;
		rotatingNoF1IntegrationMotionCoeffs
		{
			origin        (0 0 0);
			axis          (0 0 1);
			omega
			{

				type            scale;
				scale           linearRamp;
				scaleCoeffs
					{
						start           12e-4;
						duration        96e-4;
					}
				value 18.67;
			}
		}
	}
	
	pitchingMotion  /// this instruction MUST come after rotor motion, otherwise the center of rotation is wrong
	{
		solidBodyMotionFunction  TrimMotion;
		origin        (-0.25 0.000 0);
		amplitude     (0 0 -25);  // degs
		initialOffset 1; // offset of foil oscillation at t=0, multiple of pi, in rad
		omega
		{
			type            scale;
			scale           linearRamp;
			scaleCoeffs
				{
					start           12e-4;
					duration        96e-4;
				}
			value 18.67;
		}
		omega_value	18.67;
		#include 	"../system/Oscillations"
		PatchName	"_Blade2";
	}
}




